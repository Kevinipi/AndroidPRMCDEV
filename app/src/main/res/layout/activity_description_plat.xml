<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".DescriptionPlatActivity">

    <ImageView
        android:id="@+id/detail_plat_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/plat1" />

    <TextView
        android:id="@+id/detail_plat_titre"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_toRightOf="@id/detail_plat_image"
        android:gravity="center"
        android:text="TextView"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_plat_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/detail_plat_image"
        android:layout_marginTop="20dp"
        android:text="TextView" />
</RelativeLayout>